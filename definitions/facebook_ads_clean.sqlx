config {
  type: "table",
  schema: "silver",
  tags: ["facebook_ads"]
}

SELECT
  id,
  page_id,
  ad_snapshot_url,
  ad_delivery_start_time AS start_date,
  ad_delivery_stop_time AS end_date,
  DATE_DIFF(ad_delivery_stop_time, ad_delivery_start_time, DAY) AS duration_days
FROM `adtrends-insight.raw.facebook_ads`
